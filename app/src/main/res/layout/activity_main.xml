<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302E2E"
    tools:context=".MainActivity">

<ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintWidth_percent="0.25"
    app:layout_constraintDimensionRatio="1"
    android:src="@drawable/ic_egg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/cell5"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintBottom_toTopOf="@id/cell5"
       app:layout_constraintStart_toEndOf="@id/cell5"
        android:id="@+id/cell3"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintBottom_toTopOf="@id/cell5"
        app:layout_constraintEnd_toStartOf="@id/cell5"
        android:id="@+id/cell1"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintBottom_toTopOf="@id/cell5"
        app:layout_constraintEnd_toStartOf="@id/cell3"
        android:id="@+id/cell2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintBottom_toBottomOf="@id/cell5"
        app:layout_constraintEnd_toStartOf="@id/cell5"
        android:id="@+id/cell4"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintBottom_toBottomOf="@id/cell5"
        app:layout_constraintStart_toEndOf="@id/cell5"
        android:id="@+id/cell6"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintStart_toStartOf="@id/cell5"
        app:layout_constraintTop_toBottomOf="@id/cell5"
        android:id="@+id/cell8"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintEnd_toStartOf="@id/cell5"
        app:layout_constraintTop_toBottomOf="@id/cell5"

        android:id="@+id/cell7"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1"
        android:src="@drawable/ic_egg"
        app:layout_constraintStart_toEndOf="@id/cell5"
        app:layout_constraintTop_toBottomOf="@id/cell5"

        android:id="@+id/cell9"/>


<FrameLayout
    android:layout_width="0dp"
    android:layout_height="4dp"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="@id/cell5"
    app:layout_constraintEnd_toEndOf="@id/cell3"
    app:layout_constraintStart_toStartOf="@id/cell1"/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/cell5"
        app:layout_constraintEnd_toEndOf="@id/cell3"
        app:layout_constraintStart_toStartOf="@id/cell1"/>
    <FrameLayout
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cell8"
        app:layout_constraintStart_toStartOf="@id/cell5"
        app:layout_constraintTop_toTopOf="@id/cell2"/>
    <FrameLayout
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cell8"
        app:layout_constraintStart_toEndOf="@id/cell5"
        app:layout_constraintTop_toTopOf="@id/cell2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:textAlignment="center"
        tools:text="Winner is Egg!!!"
        android:padding="18dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/gamestatus"
        android:alpha="0.8"/>
    <Button

        android:id="@+id/resetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cell8"
        android:text="RESET"/>
</androidx.constraintlayout.widget.ConstraintLayout>